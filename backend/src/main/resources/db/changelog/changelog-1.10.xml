<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.10.0" author="novikovdd">
        <createTable tableName="monitoring" schemaName="${schema}">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="monitoring_pk"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="event" type="varchar(20)">
                <constraints nullable="true"/>
            </column>
            <column name="created_date" type="timestamp" defaultValue="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="monitoring_idx"  tableName="monitoring" schemaName="${schema}">
            <column name="event"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
