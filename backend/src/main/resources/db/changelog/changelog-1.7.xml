<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.7.0" author="novikovdd">
        <delete tableName="notifications" schemaName="${schema}">
            <where>id >= 0</where>
        </delete>

        <dropPrimaryKey tableName= "notifications" constraintName="notifications_pk"/>
        <dropColumn tableName="notifications" columnName="id" schemaName="${schema}" />
        <addColumn tableName="notifications" schemaName="${schema}">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false" primaryKeyName="notifications_pk"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
